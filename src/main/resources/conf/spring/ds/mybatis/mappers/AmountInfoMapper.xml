<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dap.cloud.jobx.DBsample.bank.mapper.AmountInfoMapper">

    <resultMap id="BaseResultMap" type="com.dap.cloud.jobx.DBsample.bank.model.AmountInfo">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
        <result column="user_code" property="userCode" jdbcType="VARCHAR" />
        <result column="amount_type" property="amountType" jdbcType="BIGINT" />
        <result column="create_time" property="createTime" jdbcType="DATETIMEOFFSET" />
        <result column="deposit_type" property="depositType" jdbcType="BIGINT" />
        <result column="deposit_time" property="depositTime" jdbcType="BIGINT" />
    </resultMap>

    <sql id="Base_Column_List">
        id,user_name, user_code, amount_type, create_time, deposit_type, deposit_time
    </sql>

    <select id="selectByDepositType" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from amount_info
        where deposit_type = #{depositType,jdbcType=BIGINT}
    </select>

    <select id="selectByShardingItem" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from amount_info
        where mod(id,#{shardingTotalCount, jdbcType=BIGINT})=#{shardingItem,jdbcType=BIGINT}
    </select>

    <select id="selectCountByDepositType" resultType="java.lang.Integer">
        select count(1) from amount_info where deposit_type = #{depositType}
    </select>
    <select id="selectByShardingItemAndDepositType" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from amount_info
        where mod(id,#{shardingTotalCount, jdbcType=BIGINT})=#{shardingItem,jdbcType=BIGINT} and deposit_type = #{depositType} limit #{start}, #{size}
    </select>

</mapper>